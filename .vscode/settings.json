{
  "[javascript]": {
    "editor.defaultFormatter": "dprint.dprint"
  },
  "[json]": {
    "editor.defaultFormatter": "dprint.dprint"
  },
  "[markdown]": {
    "editor.defaultFormatter": "dprint.dprint"
  },
  "[typescript]": {
    "editor.defaultFormatter": "dprint.dprint"
  },
  "dprint.path": "./node_modules/dprint/dprint",
  "eslint.options": {
    "extensions": [".cjs", ".md", ".ts"],
    "overrideConfigFile": "./.eslintrc.cjs"
  },
  "eslint.packageManager": "yarn",
  "eslint.validate": ["javascript", "markdown", "typescript"],
  "files.associations": {
    ".env*": "shellscript",
    "commit-msg": "shellscript",
    "pre-commit": "shellscript",
    "pre-push": "shellscript"
  },
  "prettier.enable": false,
  "quokka.automaticRestart": true,
  "quokka.automaticStartRegex": "^(\\w([-]\\w)?)+(?!spec)\\.(cjs|jsx?|tsx?)$",
  "quokka.colorizeOutput": true,
  "quokka.compactMessageOutput": true,
  "typescript.tsdk": "./node_modules/typescript/lib",
  "vsicons.associations.files": [
    {
      "extensions": [".commitlintrc.ts"],
      "format": "svg",
      "icon": "commitlint"
    },
    {
      "extensions": [
        ".eslintrc.base.cjs",
        ".eslintrc.spec.cjs",
        ".eslintrc.spellcheck.cjs"
      ],
      "format": "svg",
      "icon": "eslint"
    },
    {
      "extensions": [".lintstagedrc.cjs"],
      "format": "svg",
      "icon": "lintstagedrc"
    },
    {
      "extensions": [".markdownlint.yml", ".markdownlintignore"],
      "format": "svg",
      "icon": "markdownlint"
    },
    {
      "extensions": ["yarnrc.yml"],
      "format": "svg",
      "icon": "yarn"
    }
  ],
  "vsicons.associations.folders": [
    {
      "extensions": ["__fixtures__"],
      "format": "svg",
      "icon": "data"
    },
    {
      "extensions": [
        "1kyu",
        "2kyu",
        "3kyu",
        "4kyu",
        "5kyu",
        "6kyu",
        "7kyu",
        "8kyu"
      ],
      "format": "svg",
      "icon": "library"
    }
  ]
}
